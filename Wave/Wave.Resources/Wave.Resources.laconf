application
{
    wave
    {
        server
        {
            prefix { name="http://+:8080/" }

            dispatcher
            {
                handler
                {
                    type="NFX.Wave.Handlers.MVCHandler, NFX.Wave"
                    type-location { assembly="Wave.Resources.exe" ns { name="Wave.Resources.Controllers" } }
                    match { path="/{type=Test}/{mvc-action=Index}" var { query-name="*" } }
                }
            }
        }
    }
}